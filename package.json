{
  "name": "experiment-boilerplate",
  "version": "1.0.0",
  "author": "Ustym Ukhman <ustym.ukhman@gmail.com>",
  "description": "A Boilerplate for WebGL Experiments",
  "homepage": "https://github.com/UstymUkhman/experiment-boilerplate",
  "main": "src/main.ts",
  "license": "WTFPL",
  "scripts": {
    "asbuild:optimized": "asc ./node_modules/as-bind/lib/assembly/as-bind.ts src/assembly/index.ts -b build/bin/optimized.wasm -t build/bin/optimized.wat --validate --sourceMap --optimize",
    "asbuild:untouched": "asc ./node_modules/as-bind/lib/assembly/as-bind.ts src/assembly/index.ts -b build/bin/untouched.wasm -t build/bin/untouched.wat --validate --sourceMap --debug",
    "asbuild": "npm run asbuild:untouched && npm run asbuild:optimized",
    "start": "webpack-dev-server --inline --progress",
    "build": "npm run asbuild && webpack --env build",
    "test": "./node_modules/.bin/jest --notify",
    "server": "cd build && npx http-server",
    "test:cover": "yarn test --coverage"
  },
  "dependencies": {
    "@types/lodash": "^4.14.149",
    "animejs": "^3.2.0",
    "await-to-js": "^2.1.1",
    "three": "^0.115.0"
  },
  "devDependencies": {
    "as-bind": "^0.2.0",
    "assemblyscript": "^0.9.4",
    "css-loader": "^3.2.0",
    "eslint": "^6.3.0",
    "file-loader": "^5.1.0",
    "glslify-loader": "^2.0.0",
    "gltf-loader-2": "^0.0.3",
    "jest": "^25.1.0",
    "lut-loader": "^0.0.2",
    "mini-css-extract-plugin": "^0.9.0",
    "minimist": "^1.2.5",
    "style-loader": "^1.0.0",
    "stylelint-config-standard": "^20.0.0",
    "terser-webpack-plugin": "^2.3.5",
    "threejs-glsl-loader": "^1.0.4",
    "ts-loader": "^6.2.1",
    "typescript": "^3.8.3",
    "url-loader": "^3.0.0",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.8",
    "webpack-dev-server": "^3.8.0",
    "webpack-glsl-loader": "^1.0.1",
    "worker-loader": "^2.0.0"
  },
  "resolutions": {
    "minimist": "^1.2.5"
  },
  "engines": {
    "node": ">= 9.10.0",
    "npm": ">= 5.5.0"
  }
}
