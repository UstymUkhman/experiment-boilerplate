{
  "version": "1.0.0",
  "name": "threejs-boilerplate",
  "author": "Ustym Ukhman <ustym.ukhman@gmail.com>",
  "description": "A Boilerplate for Three.js Experiments",
  "homepage": "https://github.com/UstymUkhman/threejs-boilerplate",
  "main": "src/main.ts",
  "license": "WTFPL",
  "scripts": {
    "asbuild:optimized": "asc ./node_modules/as-bind/lib/assembly/as-bind.ts src/assembly/index.ts -b public/bin/optimized.wasm -t public/bin/optimized.wat --sourceMap --optimize",
    "asbuild:untouched": "asc ./node_modules/as-bind/lib/assembly/as-bind.ts src/assembly/index.ts -b public/bin/untouched.wasm -t public/bin/untouched.wat --sourceMap --debug",
    "asbuild": "yarn asbuild:untouched && yarn asbuild:optimized",
    "start": "webpack-dev-server --inline --progress",
    "lint:js": "eslint src/**/*{.ts,.tsx,.js,.jsx}",
    "build": "yarn asbuild && webpack --env build",
    "test": "./node_modules/.bin/jest --notify",
    "lint:css": "stylelint **/*.{html,css}",
    "test:cover": "yarn test --coverage",
    "serve": "npx http-server"
  },
  "dependencies": {
    "@types/lodash": "^4.14.158",
    "animejs": "^3.2.0",
    "await-to-js": "^2.1.1",
    "three": "^0.118.3"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.10.4",
    "@types/jest": "^26.0.5",
    "@types/node": "^14.0.24",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "as-bind": "^0.3.4",
    "assemblyscript": "^0.14.3",
    "babel-jest": "^26.1.0",
    "css-loader": "^3.6.0",
    "eslint": "^7.5.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^4.0.2",
    "file-loader": "^6.0.0",
    "glslify-loader": "^2.0.0",
    "gltf-loader-2": "^0.0.3",
    "jest": "^26.1.0",
    "lut-loader": "^0.0.2",
    "mini-css-extract-plugin": "^0.9.0",
    "minimist": "^1.2.5",
    "style-loader": "^1.0.0",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^20.0.0",
    "terser-webpack-plugin": "^3.0.7",
    "threejs-glsl-loader": "^1.0.4",
    "ts-jest": "^26.1.3",
    "ts-loader": "^8.0.1",
    "typescript": "^3.9.7",
    "url-loader": "^4.0.0",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.8.0",
    "webpack-glsl-loader": "^1.0.1",
    "worker-loader": "^2.0.0"
  },
  "resolutions": {
    "minimist": "^1.2.5"
  },
  "engines": {
    "node": ">= 9.10.0",
    "npm": ">= 5.5.0"
  }
}
